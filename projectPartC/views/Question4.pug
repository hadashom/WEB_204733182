doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title #{page_title}
    link(rel='stylesheet', href='/CSS/Styles.css')
    script(src='/JS/jsCode.js', defer)
    //- script(src='/JS/questionPageJS.js', defer)

  body
    h3.h3-header Question 4 of 5
    .question-background
      h2.h2-header.smaller-text
        | How much do you agree with the following sentence?
      h2.h2-header.smaller-text
        | &ldquo;I prefer a higher risk investment with a higher reward potential&rdquo;
      form(action="/userQuestion4", method="get")
        select(name="agree_level", id="agree_level", required="required")
          option(value=1) Not at all
          option(value=2) Somewhat agree
          option(value=3) Agree
          option(value=4) Very much agree
        button(type="submit", class="next-button") Next Question
      br
      a(href="/Question3")
        button(type="button", class="out-button") Previous Question